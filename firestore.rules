rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Personal Todos - authenticated users can manage their own todos
    // Client-side validation ensures users only access their own data via employeeId filter
    match /personalTodos/{todoId} {
      allow read, write: if isAuthenticated();
    }
    
    // Keep existing rules for other collections
    match /employees/{employeeId} {
      allow read, write: if isAuthenticated();
    }
    
    match /discussions/{discussionId} {
      allow read, write: if isAuthenticated();
      
      match /replies/{replyId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    match /attendance/{attendanceId} {
      allow read, write: if isAuthenticated();
    }
    
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }
    
    match /activityLogs/{logId} {
      allow read, write: if isAuthenticated();
    }
  }
}
